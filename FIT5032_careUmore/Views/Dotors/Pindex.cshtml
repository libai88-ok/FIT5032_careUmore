@model IEnumerable<FIT5032_careUmore.Models.Dotor>

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailabilityDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkYears)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locations)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @{ string datet = item.AvailabilityDate.ToString("yyyy-MM-dd");}
                    @Html.DisplayFor(modelItem => datet)
                </td>
                <td>
                    @Html.ActionLink("Details", "Pdetails", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
            });
            $.notify("click Details to get location!", "success");
        });
    </script>
}
